export DISPLAY=':0' XAUTHORITY='/var/host/Xauthority'

export XMETHOD='xephyr'
XARGS='-fullscreen -host-cursor -nolisten tcp'
if [ -f /etc/crouton/xserverrc-local ]; then
    . /etc/crouton/xserverrc-local
fi

exec /usr/bin/Xephyr $XARGS "$@"
