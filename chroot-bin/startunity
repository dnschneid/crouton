# Launches Unity; will fall back to Unity-2D on supported releases

# Ensure global app menus work.
export UBUNTU_MENUPROXY=1
export GTK_MODULES="unity-gtk-module"

exec crouton-noroot gnome-session-wrapper ubuntu
