REQUIRES='gtk-extra'
DESCRIPTION='Installs the GNOME desktop environment. (Approx. 400MB)'
HOSTBIN='startgnome'
CHROOTBIN='crouton-noroot startgnome gnome-session-wrapper'
. "${TARGETSDIR:="$PWD"}/common"

### Append to prepare.sh:
check_distro() 
{
    ###list of distros that need gnome-session-fallback
    set "squeeze" "wheezy" "kali" "trusty" "precise" 
    name=$(lsb_release -cs)
    #echo "$name"
    for i do
	if [ "$i" = "$name" ]; then
	   echo "1" #The distro installed needs gnome-session-fallback
	fi
    done
}
if release -ge wheezy -ge kali -ge trusty; then
    session_package_needed=gnome-session-flashback;
else
    session_package_needed=gnome-session-fallback;
fi
    install --minimal evolution-data-server gnome-control-center \
           gnome-screensaver gnome-session "$session_package_needed" \
           gnome-shell gnome-themes-standard gvfs-backends nautilus \
           unzip gtk2-engines-pixbuf
TIPS="$TIPS
You can start GNOME via the startgnome host command: sudo startgnome
"
